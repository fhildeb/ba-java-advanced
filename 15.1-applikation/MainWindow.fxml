<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainWindowController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0">
         <children>
            <Label fx:id="praktikumLabel" alignment="CENTER" text="Praktikum 15" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="textBox" alignment="CENTER" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button fx:id="changeTextButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleCangeText" text="Change Text" />
                  <Button fx:id="clearTextButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleClearText" text="Clear Text" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
